#macro c_ltblue   (make_color_rgb(127,127,255))
#macro c_dkblue   (make_color_rgb(  0,  0,127))
#macro c_ltred    (make_color_rgb(255,127,127))
#macro c_dkred    (make_color_rgb(127,  0,  0))
#macro c_ltgreen  (make_color_rgb(127,255,127))
#macro c_dkgreen  (make_color_rgb(  0,127,  0))


///=================================================================
///@function RGB_color( _color )                                                
///@description Creates a flexible Color value                                    
///@param _color{int}                                                       
///-----------------------------------------------------------------
function RGB_color( _color ) constructor
{
	///_____________________________________________________________
    ///---<<<<<<<<<<<<<<<<<::::| DATA |::::>>>>>>>>>>>>>>>>>>>>>>---
	#region DATA
    	
    	// 32 Bit color value
    	color = _color;
    
        shift =
    	{ // Channel Shift amount
	        red   : 16,
	        green : 8,
	        blue  : 0 		
    	};
        	
    	mask  =	
    	{ // Channels Bitmask
		    red  : $FF0000,
		    green: $00FF00,
		    blue : $0000FF
	    };

	#endregion
    ///________________________< DATA >_____________________________

    ///===========================================
    ///@function make_active()
    ///@description Sets as Draw Color
    ///-------------------------------------------
    function make_active()
    {
		var active_color = make_color_rgb(get_red(), get_green(), get_blue());
    	draw_set_color(active_color);
    }
    ///___________________________________________
		
    ///===========================================
    ///@function function set_RGB(_r, _g, _b)   
    ///@description Sets the RGB channels
    ///-------------------------------------------
	function set_RGB(_r, _g, _b)
    {
		set_red(_r); set_green(_g) ; set_blue(_b);
		return color;
    }
    ///___________________________________________

	///_____________________________________________________________
    ///---<<<<<<<<<<<<<<::::| INFORMATION |::::>>>>>>>>>>>>>>>>>>---
    #region FORMAT_READS

	 
        ///===========================================
	    ///@function is_RGB()
	    ///@description True if reading as RGB
        ///-------------------------------------------
        function is_RGB()
	    {
	    	return (shift.blue == 0);
	    }
	    ///___________________________________________	
		
        ///===========================================
	    ///@function is_BGR()
	    ///@description True if reading as BGR
        ///-------------------------------------------
        function is_BGR()
	    {
	        return (shift.red == 0); 
	    }
	    ///___________________________________________
		
    #endregion			
	///_____________________< INFORMATION >_________________________
 
	
	///_____________________________________________________________
    ///---<<<<<<<<<<<<<<<<<<::::| READS |::::>>>>>>>>>>>>>>>>>>>>---
	#region READ_COLOR
	
        ///===========================================
	    ///@function get_red()
        ///-------------------------------------------
        function get_red()
	    {
	        return ((color & mask.red) >>  shift.red)	
	    }
	    ///___________________________________________
		
        ///===========================================
	    ///@function get_green()
        ///-------------------------------------------
	    function get_green()
	    {
	    	return ((color & mask.green) >> shift.green);		
	    }
	    ///___________________________________________
		
        ///===========================================
	    ///@function get_blue()
        ///-------------------------------------------
	    function get_blue()
	    {
	    	return ((color & mask.blue) >> shift.blue);	
	    }
	    ///___________________________________________
		
		///===========================================
	    ///@function normalize()
	    ///@description Returns Normalized RGB Array
        ///-------------------------------------------
	    function normalize()
	    {
	    	R = self.get_red();  
	    	G = self.get_green();
	    	B = self.get_blue();
	    	var recip = 1.0 / 255.0;
	    	var result = [R  * recip, G  * recip, B  * recip];
	    	return result;
	    }
	    ///___________________________________________
	
    #endregion
	///_________________________< READS >___________________________


    ///_____________________________________________________________
    ///---<<<<<<<<<<<<<<::::| MANIPULATION |::::>>>>>>>>>>>>>>>>>---
	#region MANIPULATION
	
        ///===========================================
        ///@function set_red(_val)
        ///@description Sets the Red Channel
		///@param _val{char} 8bit Red channel value
        ///-------------------------------------------
        function set_red(_val)
        {     
			_val = clamp(_val, 0, 255);
			self.color = self.color & ~mask.red;		
			var result = (_val  << shift.red) & mask.red;			
			self.color |= result;
		}
		///___________________________________________
	
        ///===========================================
        ///@function set_green(_val)
        ///@description Sets the Green Channel
		///@param _val{char} 8bit Green channel value
        ///-------------------------------------------
        function set_green(_val)
        {     
			_val = clamp(_val, 0, 255);
			var zero_mask = ~mask.green;	
			self.color = self.color & zero_mask
			var result = (_val  << shift.green) & mask.green;
			self.color |= result;
		}
		///___________________________________________
	
        ///===========================================
        ///@function set_blue(_val)
        ///@description Sets the Blue Channel
		///@param _val{char} 8bit Blue channel value
        ///-------------------------------------------
        function set_blue(_val)
        {    
			_val = clamp(_val, 0, 255);
			var zero_mask = ~mask.blue;	
			self.color = self.color & zero_mask
			var result = (_val  << shift.blue) & mask.blue;		
			self.color |= result;
		}
		///___________________________________________
		
        ///===========================================
        ///@function swap_RB()
        ///@description Swaps the Red and Green
        ///-------------------------------------------
        function swap_RB()
        {     
	        self.color = 
	    	((color & $FF0000) >> 16) |
	    	( color & $00FF00)        |
	    	((color & $0000FF) << 16);
	    	return self.color;
	    }
        ///___________________________________________
	    
		
        ///===========================================
        ///@function  make_BGR()
        ///@description Make this color use BGR format
        ///-------------------------------------------
        function make_BGR()
        {        	
	    	if(is_RGB())
	    	{// IF WE ARE RGB CONVERT
                self.shift.red   = 0;    self.mask.red   = $0000FF;
                self.shift.green = 8;	 self.mask.green = $00FF00;	 	
                self.shift.blue  = 16	 self.mask.blue  = $FF0000;	  
	    		swap_RB();
	    	}
            return self.color;
        }
        ///___________________________________________
        		
        ///===========================================
        ///@function make_RGB()
        ///@description Make this color use RGB format
        ///-------------------------------------------
        function make_RGB()
        {        	
	        if(is_BGR())
	    	{// IF WE ARE BGR CONVERT
	            self.shift.red   = 16;   self.mask.red   = $FF0000;
	            self.shift.green = 8;    self.mask.green = $00FF00;
	            self.shift.blue  = 0;    self.mask.blue  = $0000FF;		
	    		swap_RB();
	    	}
	    	return self.color;
        }
        ///___________________________________________
    
	#endregion
	///_____________________< MANIPULATION >________________________

} 
///_____________________< RGB_color C_tor >_________________________



#region FREE_FUNCTIONS
    
    ///===========================================
    ///@function brg_to_rgb(_color)
    ///@description Converts BRG value to BRG
    ///@param _color
    ///-------------------------------------------
    function brg_to_rgb(_color)
    {
        var b = (_color & $FF0000) >> 16
        var g = (_color & $00FF00)
        var r = (_color & $0000FF) << 16;
    	return r | g | b; 
    }
    ///___________________________________________
    
    
    ///===========================================
    ///@function rgb_to_brg(_color)
    ///@description Converts RGB value to BRG
    ///@param _color
    ///-------------------------------------------
    function rgb_to_brg(_color)
    {
        var r = (_color & $FF0000) >> 16
        var g = (_color & $00FF00);
        var b = (_color & $0000FF) << 16;
    	return r | g | b; 
    }
    ///___________________________________________
    
    
#endregion


